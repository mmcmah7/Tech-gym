<h2 style= "color: white;">Here are our <%= @category.name %> exersizes:</h2>
<div class="container">
<div class="row">
  <div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>User</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>
</div>
</div>


  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.message.html_safe %></td>
        <td><% unless post.user.avatar.url == nil %> <%= image_tag post.user.avatar.url, width: 50 %>
          <% end -%>
           <%= link_to post.user.username, show_user_path(id: post.user.id) %>
        </td>
        <td><%= post.title %></td>
        <td><%= link_to 'Show', post %></td>
        <% if current_user.id == post.user_id %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end -%>
      </tr>
    <% end %>
  </tbody>

</table>
</div>
</div>
</div>
</div>
</div>