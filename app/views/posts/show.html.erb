<p id="notice"><%= notice %></p>

<div class="container">
<div class="row">
  <div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
<p>
  <strong>User:</strong>
  <%= link_to @post.user.username,
  show_user_path(id: @post.user.id) %>
</p> 

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Message:</strong>
  <%= @post.title %>
  <%= @post.message.html_safe %>
</p>



<p>
    <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-default" %>
</p>

</div>
</div>
</div>
</div>
</div>

<div class="container">
<div class="row">
  <div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">

<h4>Leave a Comment on this Workout: </h4>

<div id="comments">

    <%= render 'comments/form', comment: @comment %>

    <h5><b>All Comments:</b></h5>
    
    <% @post.comments.each do |comment| %>

        <p>
	    <%= comment.author %> commented...<br />
	    <%= comment.comment_entry %>
	</p>
    <% end %>

</div>
</div>
</div>
</div>
</div>
</div>



<p>
    <%= link_to 'Back', posts_path, class: "btn btn-default" %>
</p>
  
