<p id="notice"><%= notice %></p>
<div class="container">
<div class="row">
  <div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><% if post.user.avatar.url == nil %> 
          <%= image_tag "default.png", class: "pic" %>
          <% else %>
          <%= image_tag post.user.avatar.url, class: "pic" %>
          <% end -%>
           <%= link_to post.user.username, show_user_path(id: post.user.id) %>
        </td>
        <td><%= post.title %></td>
        <td><%= post.message.html_safe %></td>
        <td><%= link_to 'Show', post %></td>
         <% if current_user.id == post.user_id %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end -%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

</div>
</div>
</div>
</div>
</div>
